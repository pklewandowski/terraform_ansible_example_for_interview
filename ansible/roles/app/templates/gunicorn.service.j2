[Unit]
Description=Gunicorn for {{ django_project_name }}
After=network.target

[Service]
Type=simple
WorkingDirectory={{ django_base_dir }}
EnvironmentFile={{ django_env_file }}
ExecStart={{ django_base_dir }}/venv/bin/gunicorn {{ django_project_name }}.wsgi:application \
  --bind {{ gunicorn_bind }} \
  --workers {{ gunicorn_workers }} \
  --access-logfile {{ gunicorn_access_log }} \
  --error-logfile {{ gunicorn_error_log }}
Restart=on-failure
RestartSec=3
User=root

[Install]
WantedBy=multi-user.target
